                            android:lines="1"
                            android:text="Helpdesk"
                            android:textAlignment="center"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/white" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
