<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.classes.activity.ClassesDetailViewActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">
            <TextView
                android:id="@+id/textview_course_id_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course ID - Course Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/seperatorKnowledgebase"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textview_course_id_name"
                android:layout_alignLeft="@+id/textview_course_id_name"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#000000" />

            <ImageView
                android:id="@+id/imageViewSexTalkContent"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignLeft="@+id/textview_course_id_name"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/seperatorKnowledgebase"
                android:layout_centerHorizontal="true"
                android:foregroundGravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/sample_image" />

            <TextView
                android:id="@+id/textview_course_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewSexTalkContent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:text="Course Description" />


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
