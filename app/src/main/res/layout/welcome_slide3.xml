<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_welcome_3"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/welcome_slide3_wow_feature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/welcome_online_registration"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/welcome_slide3_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_slide3_wow_feature"
        android:layout_marginTop="@dimen/paragraph_line_spacing"
        android:layout_marginBottom="40dp"
        android:text="@string/welcome_online_registration_description"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

</RelativeLayout>